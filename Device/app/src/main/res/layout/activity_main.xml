<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.matthias.device.MainActivity">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/computer"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_rowSpan="2" />

        <TextView
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:textSize="15dp"
            android:text="※ From paired watch to receive" />

        <TextView
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:text="- Ready to receive (4 commands)" />

        <ImageView
            android:id="@+id/light0"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_column="0"
            android:layout_marginTop="10dp"
            android:layout_row="2"
            android:layout_rowSpan="2"
            android:src="@drawable/house"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/light1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_column="0"
            android:layout_marginTop="10dp"
            android:layout_row="2"
            android:layout_rowSpan="2"
            android:src="@drawable/house2"
            android:visibility="visible" />

        <TextView
            android:id="@+id/house_relay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_row="2"
            android:text="※ To your house"
            android:textSize="15dp" />

        <TextView
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="1"
            android:text="- Waiting for user to decide" />

        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="4"
            android:layout_column="0"
            android:layout_columnSpan="6"
            android:text="Select the communication method." />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_columnSpan="6">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Send directly to your home"
                android:id="@+id/radio1" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wait for user's response to determine"
                android:id="@+id/radio2" />
        </RadioGroup>

        <Button
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send it to home manually"
            android:layout_row="6"
            android:layout_column="0"
            android:layout_columnSpan="6"
            android:id="@+id/sendButton"
            android:enabled="false" />

        <TextView
            android:id="@+id/Cur_authorization"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Connection State : "
            android:layout_row="7"
            android:layout_column="0"
            android:layout_columnSpan="6" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_row="8"
            android:layout_column="0"
            android:layout_columnSpan="6" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_column="0"
                android:text="Smart Watch : " />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Disconnected"
                android:id="@+id/watchConn"
                android:layout_row="0"
                android:layout_column="1" />

            <ImageView
                android:layout_marginTop="2dp"
                android:layout_marginLeft="10dp"
                android:layout_width="30dp"
                android:layout_height="15dp"
                android:id="@+id/watchImg"
                android:src="@drawable/disconn"
                android:layout_row="0"
                android:layout_column="2" />

            <ImageView
                android:layout_marginLeft="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/comm"
                android:layout_row="0"
                android:layout_column="3"
                android:layout_rowSpan="2" />

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:text="Raspberry Pie : " />

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Disconnected"
                android:id="@+id/raspConn"
                android:layout_row="1"
                android:layout_column="1" />

            <ImageView
                android:layout_marginTop="7dp"
                android:layout_marginLeft="10dp"
                android:layout_width="30dp"
                android:layout_height="15dp"
                android:src="@drawable/disconn"
                android:id="@+id/raspImg"
                android:layout_row="1"
                android:layout_column="2" />

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last command : "
                android:layout_row="2"
                android:layout_column="0" />

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="a fox jump over the lazy dog"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_columnSpan="3"
                android:id="@+id/command" />

            <Button
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connection Configuration"
                android:id="@+id/serverSetting"
                android:layout_row="3"
                android:layout_column="0"
                android:layout_columnSpan="2"
                />

            <Button
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TempChk"
                android:id="@+id/temperCheck"
                android:layout_row="3"
                android:layout_column="2"
                android:layout_columnSpan="2"
                />

        </GridLayout>

    </GridLayout>



</LinearLayout>